<section class="section">
<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="title">Alert Conditions</h1>
  <p>
  An incident will be created, whever these conditions are meet
  </p>
  <hr>
  <table class="table">
    <tbody>
      <% assertions.each do |assertion| %>
        <tr>
          <td><%= render 'assertions/form', assertion: assertion %></td>
          <td><%= link_to 'Remove', assertion, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %></td>
          <!--
            <div class='block'>
              <%= link_to 'Configure', edit_assertion_path(assertion), class: 'button is-primary' %>
            </div>
          -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</section>
