<%= form_for(check) do |f| %>
  <% if check.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(check.errors.count, "error") %> prohibited this check from being saved:</h2>

      <ul>
        <% check.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-content">
      <div class="columns">
        <div class="column">
        <div class="field is-grouped">
          <p class="control">
            <%= f.label :type, class: 'label' %>
          </p>
          <p class="control">
            <span class='select'>
              <%= f.select :type, format_type_enum_for_select(check) %>
            </span>
            </p>
          </div>
        </div>

        <div class="column">
        <div class="field is-grouped">
          <p class="control">
            <%= f.label :name, class: 'label' %>
          </p>
          <p class="control">
            <%= f.text_field :name, class: 'input', placeholder: 'Name', size: '20' %>
          </p>
        </div>
      </div>
        <div class="column">
        <div class="field is-grouped">
          <p class="control">
            <%= f.label :uri, class: 'label' %>
          </p>
          <p class="control is-expanded">
            <%= f.text_field :uri, class: 'input', placeholder: 'URL to check' %>
          </p>
          <p class="control">
            <%= f.submit 'Save', class: 'button is-primary' %>
            </p>
          </div>
        </div>

        </div>
      </div>
    </div>
  </div>
<% end %>

<% if check.persisted? %>
  <%= render 'public_page', check: @check %>

  <%= render 'assertions/index', assertions: check.assertions %>

  <section class="section" id="add-asertion">
  <div class="container">
    <div class="columns">
      <div class="column">
        <div class="box">
          <%= render 'assertions/form', assertion: Assertion.new(check: check) %>
        </div>
      </div>
    </div>
  </div>
  </section>

<% end %>
