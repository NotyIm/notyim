<p id="notice"><%= notice %></p>

<div class="columns">
  <div class="column is-3">
    <nav class="panel">
    <p class="panel-heading">Teams</p>
    <% @teams.each do |team| %>

      <a href="<%= team_path(team) %>" class="panel-block <%= team.id == @team.id ? 'is-active' : '' %>">
        <!--<span class="panel-icon"><i class="fa fa-book"></i></span>-->
        <%= team.name %>
      </a>

      <!--
      <tr>
        <td><%= team.name %></td>
        <td><%= team.user_id %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>-->
    <% end %>
    <div class="panel-block">
      <%= render 'form', team: @draft_team %>
    </div>
    </nav>
  </div>

  <div class="column">
    <h1 class="title">Team Members</h1>


    <hr>
    <h2 class="subtitle">Invite team member</h1>
    <%= render 'invitation', team: @team, invitation: Invitation.new %>

    <hr>
    <h2 class='subtitle'>Update team</h2>
    <%= render 'form', team: @team %>

    <hr>
    <div class="message is-danger">
      <div class="message-header">Danger zone</div>
      <div class="message-body">
        <p class="is-message">Destroy team removes everything related to the team(unlink membership, delte check)</p>
        <%= link_to 'Delete team', @team, class: 'button is-danger', method: :delete, data: { confirm: 'Are you sure? This will destroy everything in the team' } %>
      </div>
    </div>
  </div>
</div>
