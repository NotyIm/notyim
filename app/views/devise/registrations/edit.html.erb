<section class='hero is-bold'>
<div class="hero-body">
  <div class="container">
    <%= render "users/shareds/tabs", tab: 'authentication' %>
  </div>
</div>

<div class="hero-body">
  <div class="container">
    <div class="columns">
      <div class="column is-half">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.label :email, class: 'label' %>
          <p class="control">
          <%= f.email_field :email, autofocus: true, class: 'input' %>
          </p>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.label :password, class: 'label' %>
          <i>(leave blank if you don't want to change it)</i>
          <p class="control">
          <%= f.password_field :password, autocomplete: "off", class: 'input' %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          </p>

          <%= f.label :password_confirmation, class: 'label' %>
          <p class="control">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input' %>
          </p>

          <p class="control">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: 'input' %>
          </p>

          <p class="control">
          <%= f.submit "Update", class: 'button is-primary' %>
          </p>
        <% end %>

        <hr>
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
</section>
